@model Podcast
@{Layout = "~/Views/Shared/_ManagementLayout.cshtml";}

<h1>Artikel Bewerken:</h1>

<form method="post" class="editPodcast">
    <ul>
        <li><span>Titel: </span><input type="text" name="Title" value="@Model.Title" /></li>
        <li><span>Afbeelding: </span><input type="text" name="Image" value="@Model.Image" /></li>
        <li><span>Bestand:</span><input type="text" name="File" value="@Model.File"/></li>
        <li><span>Auteur(s):</span><input type="text" name="Author" value="@Model.Author"/></li>
        <li>
            <span>Referencties:</span><input type="text" name="References" value="@Model.References" />
            <span id="Reference">Huidige Referenctie: </span><a target="_blank" href="http://@Model.References">@Model.References</a>
        </li>
        <li id="contentField">Inhoud:</li>
        <li><textarea name="Content">@Model.Content</textarea></li>
        @Html.HiddenFor(m => m.Date)
        <li><input type="submit" value="Opslaan" /></li>
    </ul>
</form>