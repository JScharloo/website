@model IEnumerable<Article>
@section css{
	<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/CSS/Articles/articleIndex.css")">
}

@Html.Partial("~/Views/Shared/_menu.cshtml")

<header>
	<h1>Artikelen</h1>
</header>

<section class="content">
	<div>
		<article>
			<a>
				<img src="@Url.Content("~/Content/Images/Penguin.png")">
				<h2>titel</h2>
				<p>
					tekst
				</p>
			</a>
		</article>

		<article>
			<a>
				<img src="@Url.Content("~/Content/Images/Raven.png")">
				<h2>titel</h2>
				<p>
					tekst
				</p>
			</a>
		</article>

		<article>
			<a>
				<img src="@Url.Content("~/Content/Images/Kiwi.png")">
				<h2>titel</h2>
				<p>
					tekst
				</p>
			</a>
		</article>
	</div>
</section>

<section class="articlesContent">
	<div>
		@{int i = 0;}

		@foreach (var article in Model)
		{
			i++;

			string articleContent = article.Content;
			if (articleContent.Length > 690)
			{
				articleContent = articleContent.Substring(0, 690);
				articleContent = articleContent + "...";
			}
				
			string url = string.Format("~/Content/Images/{0}", article.Image);
				
			<article id="@article.Id">
				<a href="@Url.Action("Details", new { id = article.Id })">
					<img src="@Url.Content(url)">
					<div class="articleInside">
						<h2>@article.Title</h2>
						<p>@articleContent</p>
					</div>
				</a>
			</article>
		}
	</div>
</section>