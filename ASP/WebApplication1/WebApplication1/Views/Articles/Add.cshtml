@model IEnumerable<Article>
@{Layout = "~/Views/Shared/_ManagementLayout.cshtml";}
@section css{
    <link rel="stylesheet" type="text/css" media="screen and (min-width: 801px)" href="@Url.Content("~/Content/ManagementCSS/Articles/articleAdd.css")">
    <link rel="stylesheet" type="text/css" media="screen and (max-width: 800px)" href="@Url.Content("~/Content/ManagementCSS/Articles/articleAddResponsive.css")">
}

<h1>Artikel Toevoegen:</h1>

<form method="post" class="addArticle">
    <ul>
        <li><span>Titel: </span><input type="text" name="Title" /></li>
        <li><span>Afbeelding: </span><input type="text" name="Image"/></li>
        <li id="contentField">Inhoud:</li>
        <li><textarea name="Content"></textarea></li>
        <li><input type="submit" value="Opslaan" /></li>
    </ul>
</form>