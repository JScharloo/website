@{var controllerName = ViewContext.RouteData.Values["controller"];}

<!DOCTYPE HTML>
<html>
    <head>
        <title>Home</title>
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" type="text/css" media="screen and (min-width: 801px)" href="@Url.Content("~/Content/CSS/style.css")">
        <link rel="stylesheet" type="text/css" media="screen and (min-width: 801px)" href="@Url.Content(ViewBag.css)">
        <link rel="stylesheet" type="text/css" media="screen and (max-width: 800px)" href="@Url.Content("~/Content/CSS/styleResponsive.css")">
        <link rel="stylesheet" type="text/css" media="screen and (max-width: 800px)" href="@Url.Content(ViewBag.cssResponsive)">
        <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
        <link rel="icon" type="image/icon" href="@Url.Content("~/Content/Images/lisalogo_ico.png")" />
        
        <script src="@Url.Content("~/Scripts/jquery1.11.1-min.js")"></script>
    </head>
    <body>

        <span class="jump-button" id="topPosition">Contact</span>

        @if (controllerName.Equals("Index") || controllerName.Equals("index"))
        {
            <div class="menu">
                <ul>
                    <li id="logobutton"><a href="#topPosition"><img src="@Url.Content("~/Content/Images/lisa-logo.png")"></a></li>
                    <li id="menubutton"><a href="#topPosition"><span>home</span></a></li>
                    <li id="menubutton"><a href="#artikelenButton"><span>Artikelen</span></a></li>
                    <li id="menubutton"><a href="#podcastsButton"><span>Podcasts</span></a></li>
                    <li id="menubutton"><a href="#projectenButton"><span>Projecten</span></a></li>
                    <li id="menubutton"><a href="#footerButton"><span>Contact</span></a></li>
                </ul>
            </div>

            <div class="responsive-menu">
                <ul>
                    <li id="logobutton"><a href="index.html"><img src="@Url.Content("~/Content/Images/lisa-logo.png")"></a></li>
                    <li id="menubutton"><a href="#topPosition"><span>home</span></a></li>
                    <li id="menubutton"><a href="#artikelenButton"><span>Artikelen</span></a></li>
                    <li id="menubutton"><a href="#podcastsButton"><span>Podcasts</span></a></li>
                    <li id="menubutton"><a href="#projectenButton"><span>Projecten</span></a></li>
                    <li id="menubutton"><a href="#footerButton"><span>Contact</span></a></li>
                    <li id="menubutton"><a id="responsiveClose"><span>Sluiten</span></a></li>
                </ul>
            </div>
        }
        else
        {
            <div class="menu">
                <ul>
                    <li id="logobutton"><a href="@Url.Action("Index", "Index")"><img src="@Url.Content("~/Content/Images/lisa-logo.png")"></a></li>
                    <li id="menubutton"><a href="@Url.Action("Index", "Index")"><span>home</span></a></li>
                    <li id="menubutton"><a href="@Url.Action("Index", "Articles")"><span>Artikelen</span></a></li>
                    <li id="menubutton"><a href="@Url.Action("Index", "Podcasts")"><span>Podcasts</span></a></li>
                    <li id="menubutton"><a href="@Url.Action("Index", "Projects")"><span>Projecten</span></a></li>
                    <li id="menubutton"><a href="#footerButton"><span>Contact</span></a></li>
                </ul>
            </div>

            <div class="responsive-menu">
                <ul>
                    <li id="logobutton"><a href="@Url.Action("Index", "Index")"><img src="@Url.Content("~/Content/Images/lisa-logo.png")"></a></li>
                    <li id="menubutton"><a href="@Url.Action("Index", "Index")"><span>home</span></a></li>
                    <li id="menubutton"><a href="@Url.Action("Index", "Articles")"><span>Artikelen</span></a></li>
                    <li id="menubutton"><a href="@Url.Action("Index", "Podcasts")"><span>Podcasts</span></a></li>
                    <li id="menubutton"><a href="@Url.Action("Index", "Projects")"><span>Projecten</span></a></li>
                    <li id="menubutton"><a href="#footerButton"><span>Contact</span></a></li>
                    <li id="menubutton"><a id="responsiveClose"><span>Sluiten</span></a></li>
                </ul>
            </div>
        }

        @RenderBody()

        <div class="footer">
            <span class="jump-button" id="footerButton">Contact</span>
            <div id="footerdiv">
                <h2 name="contact">Contact</h2>
                <div id="content-footer">
                    <p>E-mail: lisa@davinci.nl</p>
                    <p>Telefoon:</p>
                    <p>Adres:</p>
                    <p>Blablabla:</p>
                </div>
            </div>
        </div>

        <script src="@Url.Content("~/Scripts/script.js")"></script>

        @if (controllerName.Equals("Articles") || controllerName.Equals("articles"))
        { 
            <script src="@Url.Content("~/Scripts/Articles.js")"></script>
        }
    </body>
</html>
